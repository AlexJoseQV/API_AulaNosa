FormacionDTO {

	int id;
	int vacantes;
	int coste;

	String empresa;
	String titulo;
	String descripcion;

	ArrayList<Bytes> imagen;
	ArrayList<EtiquetasDTO> requisitos;

	Enum estado;

	Date inicio;
	Date fin;
}

OfertaDTO {

	int id;
	int vacantes;

	String empresa;
	String titulo;
	String descripcion;

	ArrayList<Bytes> imagen;
	ArrayList<EtiquetasDTO> requisitos;

	Enum estado;
}

NovedadesDTOsalida {

	ArrayList<OfertaDTO> ofertas;
	ArrayList<OfertaDTO> formaciones;
}

EtiquetaDTO {
	
	int id;
	String nombre;
}

AccesoDTO {

	String nombre;
	String contrasena;
}

GenericoDTOsalida {

	List<String> errores;
	Timestamp tiempo;
}

UsuarioDTO {
	
	int id;
	String usuario;
	String contrasena;
	String nombre;
	String apellidos;
	String email;
	String telefono;
	Enum estado {"DESEMPLEADO" || "EMPLEADO"};
	DateTime actualizacion;

	ArrayList<EtiquetasDTO> intereses;
}

UsuarioDTOsalida {
	
	UsuarioDTO usuario;
	this.usuario.contrasena = "";

	List<String> errores;
	Timestamp tiempo;
}

