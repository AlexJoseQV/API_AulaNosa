NovedadesDTOsalida api/novedades () {

	ArrayList<OfertaDTO> ofertas = SELECT * FROM Ofertas WHERE Estado = "ABIERTA";
	ArrayList<OfertaDTO> formaciones = SELECT * FROM Formaciones WHERE Estado = "ABIERTA";

